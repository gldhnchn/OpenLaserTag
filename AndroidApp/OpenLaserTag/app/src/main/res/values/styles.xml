        <item name="colorItemDivider">@color/colorBeeItemDivider</item>
        <item name="colorDiagramValue">@color/colorBeeDiagramValue</item>
        <item name="colorButtonNormal">@color/colorBeeButtonBackground</item>
        <item name="colorButtonBackground">@color/colorBeeButtonBackground</item>
        <item name="colorButtonBackgroundPressed">@color/colorBeeButtonBackgroundPressed</item>
    </style>

    <style name="LightNoActionBar" parent="AppThemeLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DarkNoActionBar" parent="AppThemeDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BeeNoActionBar" parent="AppThemeBee">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupItemTextAppearanceDark" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorDarkTextPrimary</item>
    </style>
    <style name="PopupItemTextAppearanceLight" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorLightTextPrimary</item>
    </style>
    <style name="PopupItemTextAppearanceBee" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBeeTextPrimary</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
