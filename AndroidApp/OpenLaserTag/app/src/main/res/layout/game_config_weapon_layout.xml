<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_config_item_name_layout">

        <TextView
            android:text="Pistol (1)"
            android:textSize="23sp"
            android:textColor="?colorTextPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/game_config_item_weapon_name"
            android:layout_weight="1"/>

        <TextView
            android:text="allowed"
            android:textSize="23sp"
            android:textColor="?colorTextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_config_item_weapon_allowed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/DamageDoublePoint"
            android:textSize="17sp"
            android:textColor="?colorTextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="+"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textColor="?colorTextSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/game_config_item_weapon_damagesign"/>

        <TextView
            android:text="@string/FrequencyDoublePoint"
            android:textSize="17sp"
            android:textColor="?colorTextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="5 Hz"
            android:textSize="17sp"
            android:textColor="?colorTextSecondary"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:id="@+id/game_config_item_weapon_frequency"/>

        <TextView
            android:text="@string/RangeDoublePoint"
            android:textSize="17sp"
            android:textColor="?colorTextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1"
            android:textSize="17sp"
            android:textColor="?colorTextSecondary"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/game_config_item_weapon_range"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorForegroundSecondary"/>

</LinearLayout>