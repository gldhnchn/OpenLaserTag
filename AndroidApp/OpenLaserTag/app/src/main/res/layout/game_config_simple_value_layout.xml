<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Test String Game Property"
        android:textSize="23sp"
        android:textColor="?colorTextPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/game_config_item_simple_value_name_text"/>

    <TextView
        android:text="Test String description with chosen value"
        android:textColor="?colorTextSecondary"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_config_item_simple_value_name_text"
        android:id="@+id/game_config_item_simple_value_text"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/game_config_item_simple_value_text"
        android:background="?colorForegroundSecondary"/>

</RelativeLayout>