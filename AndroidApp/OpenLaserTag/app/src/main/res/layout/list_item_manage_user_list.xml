<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/manage_user_item_layout">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="3dp"
        android:background="?colorItemDivider"
        android:id="@+id/manage_user_rahmen_top"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="3dp"
        android:background="?colorItemDivider"
        android:id="@+id/manage_user_rahmen_left"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="3dp"
        android:background="?colorItemDivider"
        android:id="@+id/manage_user_rahmen_bottom"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="3dp"
        android:background="?colorItemDivider"
        android:id="@+id/manage_user_rahmen_right"/>

    <TextView
        android:text="User1"
        android:textSize="25sp"
        android:textColor="?colorTextPrimary"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_user_rahmen_top"
        android:layout_toRightOf="@id/manage_user_rahmen_left"
        android:layout_toEndOf="@id/manage_user_rahmen_left"
        android:id="@+id/manage_user_name_text"/>
    <ImageButton
        app:srcCompat="@drawable/ic_stats_icon"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_toLeftOf="@id/manage_user_rahmen_right"
        android:layout_toStartOf="@id/manage_user_rahmen_right"
        android:layout_below="@id/manage_user_rahmen_top"
        android:id="@+id/manage_user_show_stats_button"/>
    <ImageButton
        app:srcCompat="@drawable/ic_edit_icon"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_toLeftOf="@id/manage_user_show_stats_button"
        android:layout_toStartOf="@id/manage_user_show_stats_button"
        android:layout_below="@id/manage_user_rahmen_top"
        android:id="@+id/manage_user_edit_button"/>
    <TextView
        android:text="@string/AliasDoublePoint"
        android:textSize="22sp"
        android:textColor="?colorTextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_user_name_text"
        android:layout_toRightOf="@id/manage_user_rahmen_left"
        android:layout_toEndOf="@id/manage_user_rahmen_left"
        android:id="@+id/manage_user_alias_label"/>
    <TextView
        android:text="User1Alias"
        android:textSize="22sp"
        android:textColor="?colorTextPrimary"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_user_name_text"
        android:layout_toRightOf="@id/manage_user_alias_label"
        android:layout_toEndOf="@id/manage_user_alias_label"
        android:layout_toLeftOf="@id/manage_user_edit_button"
        android:layout_toStartOf="@id/manage_user_edit_button"
        android:id="@+id/manage_user_alias_text"/>
    <TextView
        android:text="@string/PlayedGamesDoublePoint"
        android:textSize="22sp"
        android:textColor="?colorTextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_user_alias_label"
        android:layout_toRightOf="@id/manage_user_rahmen_left"
        android:layout_toEndOf="@id/manage_user_rahmen_left"
        android:id="@+id/manage_user_played_games_label"/>
    <TextView
        android:text="15"
        android:textSize="22sp"
        android:textColor="?colorTextPrimary"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manage_user_alias_label"
        android:layout_toRightOf="@id/manage_user_played_games_label"
        android:layout_toEndOf="@id/manage_user_played_games_label"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/manage_user_played_games_text"/>

</RelativeLayout>