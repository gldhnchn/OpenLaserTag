<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="type"
        android:textSize="23sp"
        android:textColor="?colorTextSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/game_config_item_variable_type"/>

    <TextView
        android:text="Variable Name"
        android:textSize="23sp"
        android:textColor="?colorTextPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/game_config_item_variable_type"
        android:layout_toStartOf="@id/game_config_item_variable_type"
        android:id="@+id/game_config_item_variable_name"/>

    <TextView
        android:text="Value"
        android:textColor="?colorTextSecondary"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_config_item_variable_name"
        android:id="@+id/game_config_item_variable_value"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/game_config_item_variable_value"
        android:background="?colorForegroundSecondary"/>

</RelativeLayout>