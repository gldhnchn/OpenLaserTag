<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@android:drawable/divider_horizontal_dark"
        android:id="@+id/game_messages_itemdivider"
        android:background="?colorItemDivider"/>

    <ImageView
        android:id="@+id/game_messages_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?colorBackground1"
        android:src="@drawable/messages"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/game_messages_itemdivider"
        />


    <TextView
        android:id="@+id/game_messages_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorTextPrimary"
        android:textSize="21sp"
        android:background="?colorBackground1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/game_messages_item_icon"
        android:layout_toEndOf="@id/game_messages_item_icon"
        android:layout_below="@id/game_messages_itemdivider"
        android:text="Listitem 1"/>

</RelativeLayout>